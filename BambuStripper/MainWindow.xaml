<Window x:Class="BambuStripper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BambuStripper - .3MF File Modifier" Height="500" Width="700"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- File/Folder Selection -->
        <GroupBox Header="File/Folder Selection" Grid.Row="0" Margin="0,0,0,15" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="FilePathTextBox" Grid.Column="0" 
                         IsReadOnly="True" 
                         VerticalContentAlignment="Center"
                         Padding="5" Margin="0,0,10,0"/>
                <Button x:Name="BrowseFileButton" Grid.Column="1" 
                        Content="Browse File..." 
                        Padding="15,5"
                        Margin="0,0,5,0"
                        Click="BrowseFileButton_Click"/>
                <Button x:Name="BrowseFolderButton" Grid.Column="2" 
                        Content="Browse Folder..." 
                        Padding="15,5"
                        Click="BrowseFolderButton_Click"/>
            </Grid>
        </GroupBox>

        <!-- Operations -->
        <GroupBox Header="Operations" Grid.Row="1" Margin="0,0,0,15" Padding="10">
            <StackPanel>
                <Button x:Name="RemoveProjectInfoButton" 
                        Content="Remove Project Info" 
                        Padding="20,8"
                        Click="RemoveProjectInfoButton_Click"
                        IsEnabled="False"/>
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0" HorizontalAlignment="Center">
                    <ProgressBar x:Name="ProgressBar" 
                                 Width="200" 
                                 Height="20" 
                                 IsIndeterminate="True"
                                 Visibility="Collapsed"
                                 Margin="0,0,10,0"/>
                    <Button x:Name="CancelButton" 
                            Content="Cancel" 
                            Padding="20,8"
                            Click="CancelButton_Click"
                            Visibility="Collapsed"
                            IsEnabled="False"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <!-- Log/Status -->
        <GroupBox Header="Status" Grid.Row="2" Margin="0,0,0,15" Padding="10">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <TextBlock x:Name="StatusTextBlock" 
                           TextWrapping="Wrap"
                           FontFamily="Consolas"
                           FontSize="11"/>
            </ScrollViewer>
        </GroupBox>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="ClearButton" 
                    Content="Clear Log" 
                    Padding="20,8"
                    Click="ClearButton_Click"/>
        </StackPanel>
    </Grid>
</Window>

